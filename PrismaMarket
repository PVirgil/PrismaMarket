const products = [
  { id: 1, name: "Product A", description: "A fantastic product.", price: 49.99, image: "product-a.jpg" },
  { id: 2, name: "Product B", description: "Another great product.", price: 79.99, image: "product-b.jpg" },
];

function displayProducts() {
  const productContainer = document.getElementById("products");
  products.forEach(product => {
    const productCard = document.createElement("div");
    productCard.className = "product-card";

    productCard.innerHTML = `
      <img src="${product.image}" alt="${product.name}">
      <h3>${product.name}</h3>
      <p>${product.description}</p>
      <p>$${product.price.toFixed(2)}</p>
      <button onclick="buyProduct('${product.name}')">Buy Now</button>
    `;
    productContainer.appendChild(productCard);
  });
}

function buyProduct(productName) {
  alert(`Purchased: ${productName}`);
}

document.addEventListener("DOMContentLoaded", displayProducts);

